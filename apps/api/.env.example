# =============================================================================
# aiRA Context Gen Tool — Backend (.env)
# =============================================================================
# Copy this file to .env and fill in your values.
# For Railway deployment, set these as environment variables in the dashboard.

# -----------------------------------------------------------------------------
# Database (REQUIRED)
# -----------------------------------------------------------------------------
# Async driver (used by FastAPI app)
DATABASE_URL=postgresql+asyncpg://dev:dev@localhost:5432/context_gen
# Sync driver (used by Alembic migrations)
DATABASE_URL_SYNC=postgresql+psycopg://dev:dev@localhost:5432/context_gen

# -----------------------------------------------------------------------------
# Auth & Session (REQUIRED)
# -----------------------------------------------------------------------------
# JWT signing secret — generate with: openssl rand -hex 32
SESSION_SECRET=change-me-in-production
# JWT expiry in hours (default: 24)
# JWT_EXPIRY_HOURS=24

# Primary admin email — this user gets is_admin=True and cannot be demoted
PRIMARY_ADMIN_EMAIL=akhil.kumar@capillarytech.com

# -----------------------------------------------------------------------------
# CORS (REQUIRED)
# -----------------------------------------------------------------------------
# Allowed frontend origins (JSON array)
# Development:
CORS_ORIGINS=["http://localhost:3000"]
# Production example:
# CORS_ORIGINS=["https://your-app.vercel.app","https://your-custom-domain.com"]

# -----------------------------------------------------------------------------
# LLM API Keys (REQUIRED — at least one for AI features)
# -----------------------------------------------------------------------------
# Server-side only — never exposed to frontend
ANTHROPIC_API_KEY=
OPENAI_API_KEY=

# -----------------------------------------------------------------------------
# Databricks Access Tokens (OPTIONAL — per cluster)
# -----------------------------------------------------------------------------
# Required only for Databricks source module.
# Format: DATABRICKS_<CLUSTER_KEY>_TOKEN=dapi...
# Cluster keys: APAC2, APAC, EU, US, TATA, USHC, SEA
#
# DATABRICKS_APAC2_TOKEN=dapi...
# DATABRICKS_APAC_TOKEN=dapi...
# DATABRICKS_EU_TOKEN=dapi...
# DATABRICKS_US_TOKEN=dapi...
# DATABRICKS_TATA_TOKEN=dapi...
# DATABRICKS_USHC_TOKEN=dapi...
# DATABRICKS_SEA_TOKEN=dapi...

# -----------------------------------------------------------------------------
# Confluence (OPTIONAL)
# -----------------------------------------------------------------------------
# Required only for Confluence source module.
# CONFLUENCE_URL=https://your-org.atlassian.net
# CONFLUENCE_EMAIL=your-email@company.com
# CONFLUENCE_API_TOKEN=

# -----------------------------------------------------------------------------
# Debug (OPTIONAL)
# -----------------------------------------------------------------------------
DEBUG=false
